{
    "builds": [
        {
            "src": "backend/wsgi.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/wsgi.py"
        }
    ],
    "hooks": {
        "build": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
    }
}